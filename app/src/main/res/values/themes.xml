<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AgoraVideoCalling" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/red</item>
    </style>


    <style name="FullScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Hide the status bar and make the activity full screen -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>




    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
    </style>
    <style name="Theme.AgoraVideoCalling" parent="Base.Theme.AgoraVideoCalling" />



    <style name="MyTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/WindowTitle</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/title_background</item>
    </style>

    <style name="WindowTitle">
        <item name="android:textAppearance">@style/WindowTitleText</item>
    </style>

    <style name="WindowTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/title_text</item>
    </style>
</resources>